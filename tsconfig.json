{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "@sindresorhus/tsconfig",
  "compilerOptions": {
    "lib": ["ESNext", "ES2022"],
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
